{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../dist/",
    "sourceMap": true,
    "declaration": false,
    "module": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "types": [],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es7",
      "es6",
      "dom"
    ],
    "noImplicitAny": true,
    "no-big-function": [true, 20],
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  }
}
